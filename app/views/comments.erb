 <form action="/submit_comment/<%=@post.id%>" method="POST" >
  <p>Enter your comment here.</p>
  <textarea name="content" rows="10" cols="50" placeholder="Enter your comment!"></textarea>
  <input type="submit">
</form>


<ol>
  
<% @post.comments.each do |comment| %>
  <li><%=comment.content %></li>
<% end %>
</ol>